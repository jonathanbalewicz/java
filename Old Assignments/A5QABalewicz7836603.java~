public class A5QABalewicz7836603 {
    public static void main(String[] agrs) {
        
        trianglePrint("abcdefghij");
    }
}
public static String triangleString(String s) {
    s = " " + s.substring(1, s.length()-1) + " \n";
    s = trianglePrint(s) + s;
    return s;
    
}
public static void trianglePrint{String s) {
    System.out.println(triangleString(s));
}